{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "react-native",
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler"
  },
  "include": ["**/*.ts", "**/*.tsx", "expo-env.d.ts"]
}
